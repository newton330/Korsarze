<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:id="@+id/settingsTitle"/>


    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/bluetoothButton"-->
        <!--android:text="Bluetooth"-->
        <!--android:onClick="OnClickBluetooth"-->

        <!--android:layout_above="@+id/loginButton"-->

        <!--android:layout_centerHorizontal="true"-->
      <!--/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsButton"
        android:onClick="onClickStats"
        android:text="Statystyki"
        android:layout_above="@+id/dataResetButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataResetButton"
        android:text="Wyczyść dane"
        android:layout_alignParentBottom="true"
        android:onClick="onClickDataReset"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settingsImage"
        android:layout_centerHorizontal="false"
        android:layout_above="@+id/loginButton"
        android:layout_below="@+id/settingsTitle"
        android:src="@drawable/pirateybw" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:id="@+id/loginButton"
    android:layout_above="@+id/statsButton"
    android:layout_centerHorizontal="true"
    android:onClick="OnClickLogin"/>

</RelativeLayout>
