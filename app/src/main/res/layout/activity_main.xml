<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newto.korsarze.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj piracie"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:id="@+id/welcomeText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nowa_gra"
        android:id="@+id/newGameButton"
        android:onClick="OnClickNewGame"
        android:text="Nowa Gra"

        android:layout_marginBottom="15dp"
        android:layout_above="@+id/ustawieniaButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ustawienia"
        android:id="@+id/ustawieniaButton"
        android:onClick="onClickUstwienia"
        android:text="Ustawienia"


        android:layout_marginBottom="15dp"
        android:layout_above="@+id/oautorachButton"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oaplikacji"
        android:id="@+id/oautorachButton"
        android:text="O Aplikacji"

        android:layout_alignParentBottom="true"
        android:onClick="onClickOAplikacji"
        android:layout_centerHorizontal="true"/>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/welcomeImage"-->
        <!--android:layout_below="@+id/welcomeText"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_above="@+id/newGameButton"-->
        <!--android:background="#303F9F"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:text=""
        android:layout_centerHorizontal="true"
        android:id="@+id/nazwauzytkownika"
        />


</RelativeLayout>
